// README at: https://github.com/devcontainers/templates/tree/main/src/miniconda
{
	"name": "AI Studio",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile"
	},

	"hostRequirements": {
		"cpus": 4,
		"memory": "2gb",
		"storage": "64gb"
	 },
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	}
}
